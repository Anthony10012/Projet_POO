<Window x:Class="WpftestPendu.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jeu du Pendu" Height="569" Width="1089">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="1046*"/>
        </Grid.ColumnDefinitions>

        <Rectangle HorizontalAlignment="Left" Height="48" Margin="75,416,0,0" Stroke="Black" VerticalAlignment="Top" Width="500" Fill="Black" Grid.Column="1"/>

        <TextBlock HorizontalAlignment="Left" Height="33" Margin="164,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" FontSize="26" FontFamily="Freestyle Script" Grid.Column="1" Text="Jeu du pendu"/>
        <TextBlock  x:Name="scoreTextBlock"   HorizontalAlignment="Left" Height="46" Margin="652,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Background="Black" Foreground="White" FontSize="24" Grid.Column="1" Text="Score :"/>
        <TextBlock x:Name="pseudoTextBlock"   HorizontalAlignment="Left"   Height="46" Margin="338,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Background="Black" Foreground="White" FontSize="24" Grid.Column="1" Text="Pseudo"/>
        <Button Content="Back" HorizontalAlignment="Left" Height="46" Margin="523,21,0,0" VerticalAlignment="Top" Width="105" Background="#FF9C9C9C" Foreground="White" FontSize="24" Grid.Column="1" Cursor="Hand" Click="BackButton_Click"/>

        <Rectangle HorizontalAlignment="Left" Height="242" Margin="164,88,0,0" Stroke="Black" VerticalAlignment="Top" Width="391" Fill="Black" Grid.Column="1"/>

        <Image x:Name="hangmanImage" HorizontalAlignment="Left" Height="242" Margin="164,88,0,0" VerticalAlignment="Top" Width="391" Grid.Column="1" Source="Image/1erreur0.png"/>

        <TextBlock x:Name="hiddenWordTextBlock" 
                   Foreground="White" 
                   FontSize="36" 
                   FontFamily="Courier New"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="75,420,0,0" 
                   Grid.Column="1" 
                   Width="500" 
                   TextAlignment="Center"/>


        <Rectangle HorizontalAlignment="Left" Height="376" Margin="594,88,0,0" Stroke="Black" VerticalAlignment="Top" Width="222" Fill="DimGray" Grid.Column="1"/>

        <UniformGrid x:Name="lettersGrid" 
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top" 
                     Margin="594,95,0,0" 
                     Width="222" 
                     Height="365" 
                     Rows="6" 
                     Columns="5" 
                     Grid.Column="1"/>

    </Grid>
</Window>